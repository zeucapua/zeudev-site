---
import SiteLayout from "../../layouts/SiteLayout.astro";

const blogs = await Astro.glob('../blogs/*.mdx');

---

<SiteLayout title="Blogs">
  <div class="flex flex-col gap-8 w-full md:w-5/6 mx-auto justify-center p-8 ">
    <a href="/">
      <p class="text-xl text-accent font-['Radwave'] mb-4">‚Üê Home</p>
    </a>
    <div>
      <p class="text-5xl font-['Radwave'] text-primary mx-auto">Blog</p>
      <span class="block mt-1 max-w-full h-1 bg-primary mb-4"></span>
    </div>
    {
      blogs.map( blog => 
        <div class="group">
          <a href={blog.url}>
            <p class="text-3xl font-['Radwave'] text-white group-hover:text-secondary transition-colors duration-300">{blog.frontmatter.title}</p>
            <span class="block mt-1 max-w-0 group-hover:max-w-full transition-all duration-300 h-1 bg-secondary"></span>
          </a>
        </div>
      )
    }
  </div>
</SiteLayout>