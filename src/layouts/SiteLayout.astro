---
import SiteNavbar from "../components/SiteNavbar.astro";

const {title} = Astro.props;
---

<html lang="en" data-theme="synthwave">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title === "Index" ? "zeu.dev" : title + " | zeu.dev"}</title>
  </head>
  <body>
    <div class="flex flex-col w-full min-w-screen h-full min-h-screen bg-[url('/Radial6-Grain3.png')] bg-cover bg-center bg-fixed">
      <SiteNavbar />
      <slot />      
    </div>
  </body>
</html>